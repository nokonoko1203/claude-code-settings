{
  "shortcuts": {
    "returnToMenu": {
      "key": "q"
    },
    "cancel": {
      "key": "escape"
    }
  },
  "statusHooks": {},
  "worktree": {
    "autoDirectory": true,
    "autoDirectoryPattern": "<HOME_DIR_PATH>/worktrees/{branch}"
  },
  "worktreeHooks": {
    "post_creation": {
      "enabled": true,
      "command": "if [ -f \"$CCMANAGER_GIT_ROOT/.env\" ] && [ ! -f .env ]; then cp \"$CCMANAGER_GIT_ROOT/.env\" .env; fi; code-insiders \"$CCMANAGER_WORKTREE_PATH\";  claude mcp add serena -- uvx --from git+https://github.com/oraios/serena serena-mcp-server --context ide-assistant --project $(pwd) && uvx --from git+https://github.com/oraios/serena serena project index"
    }
  },
  "command": {
    "command": "claude",
    "args": [
      "--resume",
      "--mcp-config=<HOME_DIR_PATH>/.claude/.mcp.json"
    ]
  },
  "commandPresets": {
    "presets": [
      {
        "id": "claude",
        "name": "Claude Code",
        "command": "claude",
        "args": [],
        "fallbackArgs": []
      },
      {
        "id": "claude-resume",
        "name": "Claude Code (Resume)",
        "command": "claude",
        "args": [
          "--resume"
        ],
        "fallbackArgs": []
      },
      {
        "id": "claude-yolo",
        "name": "Claude Code (YOLO)",
        "command": "claude",
        "args": [
          "--dangerously-skip-permissions"
        ],
        "fallbackArgs": []
      },
      {
        "id": "claude-yolo-resume",
        "name": "Claude Code (YOLO Resume)",
        "command": "claude",
        "args": [
          "--resume",
          "--dangerously-skip-permissions"
        ],
        "fallbackArgs": []
      },
      {
        "id": "gemini-default",
        "name": "Gemini CLI",
        "command": "gemini",
        "args": [],
        "detectionStrategy": "gemini"
      }
    ],
    "defaultPresetId": "claude",
    "selectPresetOnStart": true
  }
}
